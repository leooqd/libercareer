<div class="card">
  <div class="card-content">
    <%= search_form_for @q, remote: true do |f| %>
      <div class="row">
        <div class="col s12 m6 l3">
          <div class="input-field">
            <%= f.search_field :id_eq  %>
            <%= f.label :id_eq, "Código" %>
          </div>
        </div>
        <div class="col s12 m12 l3">
          <div class="input-field">
            <%= f.select :pickup_date_null, [["Selecione", ''], ["Retirado", 0], ["Não Retirado", 1]] %> 
            <%= f.label :pickup_date_null, "Retiradas" %>
          </div>
        </div>
        <div class="col s12 m12 l3">
          <div class="input-field">
            <%= f.select :return_date_null, [["Selecione", ''], ["Entregues", 0], ["Não Entregues", 1]] %> 
            <%= f.label :return_date_null, "Devolução" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l3">
          <div class="input-field">
            <%= f.search_field :end_date_lt, type: "date" %>
            <%= f.label :end_date_lt, "Término menor que" %>
          </div>
        </div>
        <div class="col s12 m12 l3">
          <div class="input-field">
            <%= f.search_field :pickup_date_lt, type: "date" %>
            <%= f.label :pickup_date_lt, "Retirada menor que" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l12">
          <%= f.submit 'buscar', :class => 'btn shadow blue right', :id => "buscar" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="card">
  <div class="card-content">
    <%= link_to "Novo", new_rent_path, class: "btn green" %>
    <div id="rents_list">
      <%= render "list" %>
    </div>
  </div>
</div>