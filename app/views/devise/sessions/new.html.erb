<div class="container">
  <div class="row">
    <div class="col s12 m12 l8 offset-l2">
    <br>
    <h5>
      <a class="brand-logo logo blue-text center">
        <center>
          <img src="/images/logo.png" class="img-fluid width-100 radius-25"> <br>
        Seja bem vindo! <br>
        </center>
      </a>
    </h5>
      <div class="card">
        <div class="card-image center">
          <span class="grey-text text-darken-2">
          <br>
            Digite seu e-mail e senha para iniciar.
          </span>
        </div>
        <div class="card-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "email", value: "teste@teste.com" %>
            </div>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: "password", value: "teste"  %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Entrar", class: "btn custom blue"  %>
            </div>
          <% end %>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
