<div class="card">
  <div class="card-content">
    <%= search_form_for @q, remote: true do |f| %>
      <div class="row">
        <div class="col s12 m6 l3">
          <div class="input-field">
            <%= f.search_field :id_eq  %>
            <%= f.label :id_eq, "Código" %>
          </div>
        </div>
        <div class="col s12 m6 l3">
          <div class="input-field">
            <%= f.search_field :number_cont  %>
            <%= f.label :number_cont, "Número" %>
          </div>
        </div>
        <div class="col s12 m6 l3">
          <div class="input-field">
            <%= f.search_field :expiration_lt, type: "date" %>
            <%= f.label :expiration_lt, "Validade Menor Que" %>
          </div>
        </div>
        <div class="input-field col s12 m6 l3">
          <%= f.collection_select :modalities_ids, Modality.all, :id, :category, {:include_hidden => true}, {multiple: true} %>
          <%= f.label :modalities_ids, "Modalidades" %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l12">
          <%= f.submit 'buscar', :class => 'btn shadow blue right', :id => "buscar" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="card">
  <div class="card-content">
    <%= link_to "Novo", new_license_path, class: "btn green" %>
    <div id="licenses_list">
      <%= render "list" %>
    </div>
  </div>
</div>
